{
	"name": "EmailSummarizer",
	"image": "mcr.microsoft.com/devcontainers/dotnet:0-7.0",
	"customizations": {
		"vscode": {
			"extensions": [
				"ms-dotnettools.csharp",
				"ms-dotnettools.csdevkit"
			]
		}
	},
	"mounts": [
        "source=${localEnv:USERPROFILE}/Code/Logs,target=/workspaces/Logs,type=bind",
        "source=${localEnv:USERPROFILE}/Code/Data,target=/workspaces/Data,type=bind"
    ],
	"runArgs": [
		"--env-file",".devcontainer/devcontainer.env"
	]
}
